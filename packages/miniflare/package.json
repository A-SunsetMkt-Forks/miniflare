{
  "name": "miniflare",
  "version": "3.0.0-next.1",
  "description": "Fun, full-featured, fully-local simulator for Cloudflare Workers",
  "keywords": [
    "cloudflare",
    "workers",
    "worker",
    "local",
    "cloudworker"
  ],
  "author": "MrBBot <me@mrbbot.dev>",
  "license": "MIT",
  "main": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./cli": "./dist/src/cli.js"
  },
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src",
    "bootstrap.js"
  ],
  "engines": {
    "node": ">=16.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudflare/miniflare.git",
    "directory": "packages/miniflare"
  },
  "bugs": {
    "url": "https://github.com/cloudflare/miniflare/issues"
  },
  "homepage": "https://github.com/cloudflare/miniflare/tree/master/packages/miniflare#readme",
  "volta": {
    "extends": "../../package.json"
  },
  "entryPoints": [
    "src/cli.ts"
  ],
  "bin": {
    "miniflare": "bootstrap.js"
  },
  "dependencies": {
    "@miniflare/cache": "3.0.0-next.1",
    "@miniflare/cli-parser": "3.0.0-next.1",
    "@miniflare/core": "3.0.0-next.1",
    "@miniflare/durable-objects": "3.0.0-next.1",
    "@miniflare/html-rewriter": "3.0.0-next.1",
    "@miniflare/http-server": "3.0.0-next.1",
    "@miniflare/kv": "3.0.0-next.1",
    "@miniflare/r2": "3.0.0-next.1",
    "@miniflare/runner-vm": "3.0.0-next.1",
    "@miniflare/scheduler": "3.0.0-next.1",
    "@miniflare/shared": "3.0.0-next.1",
    "@miniflare/sites": "3.0.0-next.1",
    "@miniflare/storage-file": "3.0.0-next.1",
    "@miniflare/storage-memory": "3.0.0-next.1",
    "@miniflare/web-sockets": "3.0.0-next.1",
    "kleur": "^4.1.4",
    "semiver": "^1.1.0",
    "source-map-support": "^0.5.20",
    "undici": "5.8.2"
  },
  "devDependencies": {
    "@miniflare/shared-test": "3.0.0-next.1",
    "@types/source-map-support": "^0.5.4",
    "open": "^8.4.0"
  },
  "peerDependencies": {
    "@miniflare/storage-redis": "3.0.0-next.1",
    "cron-schedule": "^3.0.4",
    "ioredis": "^4.27.9"
  },
  "peerDependenciesMeta": {
    "@miniflare/storage-redis": {
      "optional": true
    },
    "cron-schedule": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    }
  }
}
