{
  "private": true,
  "name": "@miniflare/root",
  "version": "2.0.0",
  "description": "Fun, full-featured, fully-local simulator for Cloudflare Workers",
  "keywords": [
    "cloudflare",
    "workers",
    "worker",
    "local",
    "cloudworker"
  ],
  "author": "MrBBot <me@mrbbot.dev>",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "types:build": "tsc",
    "types:bundle": "npm run types:build && node scripts/types.js",
    "dev": "node scripts/build.js watch",
    "test": "npm run build && ava && rimraf ./.tmp",
    "lint": "eslint 'packages/*/{src,test}/**/*.ts' 'scripts/**/*.{js,mjs}' 'types/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run lint && npm run test",
    "helpers:scaffold": "node scripts/scaffold.js",
    "helpers:version": "node scripts/version.js",
    "docs:changelog": "node docs/.vitepress/changelog.js",
    "docs:dev": "npm run docs:changelog && vitepress dev docs",
    "docs:build": "npm run docs:changelog && vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@microsoft/api-extractor": "^7.18.11",
    "@types/node": "^16.7.7",
    "@types/rimraf": "^3.0.2",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "ava": "^3.15.0",
    "esbuild": "^0.12.20",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.1",
    "esm": "^3.2.25",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3",
    "vitepress": "^0.19.1",
    "which": "^2.0.2"
  },
  "volta": {
    "node": "16.9.0"
  }
}
